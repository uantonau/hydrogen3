<settings>
    <setting propertyKey="@Properties.AccentColor" title="@Strings.AccentColorTitle">
        <settingConfig type="list">
            <listEntry value="0x00FF00">@Strings.ColorGreen</listEntry>
            <listEntry value="0x00AAFF">@Strings.ColorBlue</listEntry>
            <listEntry value="0xFF0000">@Strings.ColorRed</listEntry>
            <listEntry value="0xFF5500">@Strings.ColorOrange</listEntry>
            <listEntry value="0xFFAA00">@Strings.ColorYellow</listEntry>
            <listEntry value="0xAA00FF">@Strings.ColorPurple</listEntry>
        </settingConfig>
    </setting>
   <setting propertyKey="@Properties.MarksColor" title="@Strings.MarksColorTitle">
        <settingConfig type="list">
            <listEntry value="0x00FF00">@Strings.ColorGreen</listEntry>
            <listEntry value="0x00AAFF">@Strings.ColorBlue</listEntry>
            <listEntry value="0xFF0000">@Strings.ColorRed</listEntry>
            <listEntry value="0xFF5500">@Strings.ColorOrange</listEntry>
            <listEntry value="0xFFAA00">@Strings.ColorYellow</listEntry>
            <listEntry value="0xAA00FF">@Strings.ColorPurple</listEntry>
        </settingConfig>
    </setting>
    <setting propertyKey="@Properties.ShowBattery" title="@Strings.ShowBattery">
        <settingConfig type="boolean" />
    </setting>
    <setting propertyKey="@Properties.ShowSecondsHand" title="@Strings.ShowSecondsHand">
        <settingConfig type="boolean" />
    </setting>
</settings>